    </div>

    <div>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.hidden_field :username, :value => current_user.username %>
    </div>


    <div class = "actions">
      <%= f.submit ("Add review") %>
    </div>


  <% end %>
