<%= form_for [@game, @review] do |f| %>

<% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>
        <ul>
          <% @review.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class = "field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class = "field">
      <%= f.label :body %>
